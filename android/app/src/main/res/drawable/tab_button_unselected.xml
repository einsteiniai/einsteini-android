<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with subtle color -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:angle="315"
                android:startColor="#1F2D3D"
                android:endColor="#1A2235"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#2A3245" />
        </shape>
    </item>
    
    <!-- Subtle shine effect -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="270"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list> 