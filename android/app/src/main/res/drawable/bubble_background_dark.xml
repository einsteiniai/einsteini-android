<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#40000000" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    
    <!-- Main background with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:startColor="#27346F"
                android:centerColor="#121827"
                android:endColor="#0D1017" />
            <stroke
                android:width="1.5dp"
                android:color="#3E4565" />
        </shape>
    </item>
    
    <!-- Subtle shine effect -->
    <item android:left="7dp" android:top="7dp" android:right="40dp" android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#4DFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list> 