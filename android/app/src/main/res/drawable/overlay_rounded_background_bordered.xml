<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <corners 
                android:topLeftRadius="28dp" 
                android:topRightRadius="28dp" />
            <padding 
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#15000000" />
        </shape>
    </item>
    
    <!-- Background with modern gradient -->
    <item>
        <shape>
            <corners 
                android:topLeftRadius="28dp" 
                android:topRightRadius="28dp" />
            <gradient
                android:angle="315"
                android:endColor="#F4F5F9"
                android:centerColor="#F8F8FC"
                android:startColor="#FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Top border glow -->
    <item android:top="1dp" android:left="12dp" android:right="12dp">
        <shape>
            <size android:height="2dp" />
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
            <gradient
                android:angle="0"
                android:startColor="#4090AFFF" 
                android:centerColor="#40BD79FF"
                android:endColor="#4090AFFF"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Side borders -->
    <item android:left="1dp" android:right="1dp" android:top="3dp">
        <shape>
            <corners
                android:topLeftRadius="28dp"
                android:topRightRadius="28dp" />
            <stroke
                android:width="0.5dp"
                android:color="#33BD79FF" />
            <solid android:color="#00000000" />
        </shape>
    </item>
</layer-list> 