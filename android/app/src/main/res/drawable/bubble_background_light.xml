<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#20000000" />
            <padding android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp" />
        </shape>
    </item>
    
    <!-- Main background with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100%p"
                android:startColor="#BD79FF"
                android:centerColor="#9C55F9"
                android:endColor="#8740E5" />
            <stroke
                android:width="1.5dp"
                android:color="#D6A6FF" />
        </shape>
    </item>
    
    <!-- Subtle shine effect -->
    <item android:left="7dp" android:top="7dp" android:right="40dp" android:bottom="40dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#4DFFFFFF"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>
</layer-list> 