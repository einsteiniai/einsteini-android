<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E293B" />
            <corners android:radius="8dp" />
            <stroke android:color="#2A3245" android:width="1dp" />
        </shape>
    </item>
    
    <!-- Dropdown arrow -->
    <item android:gravity="end|center_vertical" android:right="12dp">
        <rotate android:fromDegrees="45" android:toDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#BD79FF" />
                <size android:width="10dp" android:height="2dp" />
            </shape>
        </rotate>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp" android:top="4dp">
        <rotate android:fromDegrees="-45" android:toDegrees="-45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="#BD79FF" />
                <size android:width="10dp" android:height="2dp" />
            </shape>
        </rotate>
    </item>
</layer-list> 