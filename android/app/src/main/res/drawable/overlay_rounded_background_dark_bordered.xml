<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <corners 
                android:topLeftRadius="20dp" 
                android:topRightRadius="20dp" />
            <padding 
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Background with subtle gradient -->
    <item>
        <shape>
            <corners 
                android:topLeftRadius="20dp" 
                android:topRightRadius="20dp" />
            <gradient
                android:angle="270"
                android:endColor="#0D1017"
                android:startColor="#121827"
                android:type="linear" />
        </shape>
    </item>
</layer-list> 