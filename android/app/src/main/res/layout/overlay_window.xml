<?xml version="1.0" encoding="utf-8"?>
<!-- Main container that spans the full screen for touch interception -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <!-- Semi-transparent scrim with blur effect for background -->
    <View
        android:id="@+id/overlay_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:focusable="true" />
    
    <!-- The actual overlay content with minimalistic design -->
    <LinearLayout
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="600dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/overlay_background_dark">

        <!-- Minimalistic drag handle at the top -->
        <RelativeLayout
            android:id="@+id/resizeHandle"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingTop="12dp">

            <View
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:layout_centerInParent="true"
                android:background="#666666"
                android:alpha="0.6"
                android:layout_marginTop="4dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        </RelativeLayout>

        <!-- Modern tab navigation without indicator -->
        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:background="#121827"
            android:elevation="8dp">

            <TextView
                android:id="@+id/tab_comment"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Comment"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/tiktok_sans"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/tab_button_active"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tab_summarize"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Summarize"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/tiktok_sans"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/tab_button_inactive"
                android:layout_margin="4dp" />

            <TextView
                android:id="@+id/tab_translate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Translate"
                android:textSize="16sp"
                android:textColor="#CCCCCC"
                android:fontFamily="@font/tiktok_sans"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingVertical="12dp"
                android:paddingHorizontal="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/tab_button_inactive"
                android:layout_margin="4dp" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1A1F2E"
            android:alpha="0.8"
            android:layout_marginHorizontal="20dp" />

        <!-- Content area with ScrollView -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Generated Content Container -->
                <LinearLayout
                    android:id="@+id/content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/content_block_background"
                    android:padding="16dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generated Content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#E0E0E0"
                        android:fontFamily="@font/tiktok_sans" />

                    <TextView
                        android:id="@+id/generated_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#ABABAB"
                        android:fontFamily="@font/dm_sans" />
                </LinearLayout>

                <!-- Summarize content -->
                <LinearLayout
                    android:id="@+id/contentViewLinkedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="visible">

                    <!-- Summary options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customize Summary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#BD79FF"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Summary Type"
                            android:textColor="#ABABAB"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/tiktok_sans" />

                        <Spinner
                            android:id="@+id/summary_type_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/dropdown_background_dark"
                            android:spinnerMode="dropdown" />

                        <Button
                            android:id="@+id/generate_summary_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Generate Summary"
                            android:layout_marginTop="16dp"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:background="@drawable/rounded_button_primary"
                            android:fontFamily="@font/tiktok_sans" />
                    </LinearLayout>

                    <!-- Summary content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/block_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Summary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#BD79FF"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:id="@+id/block_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="This article discusses how AI can improve workplace productivity through automated task management and intelligent data processing."
                            android:textSize="14sp"
                            android:textColor="#ABABAB"
                            android:fontFamily="@font/dm_sans" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Translate content -->
                <LinearLayout
                    android:id="@+id/contentViewTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <!-- Translation options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customize Translation"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#BD79FF"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Target Language"
                            android:textColor="#ABABAB"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/tiktok_sans" />

                        <Spinner
                            android:id="@+id/language_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/dropdown_background_dark"
                            android:spinnerMode="dropdown" />

                        <Button
                            android:id="@+id/generate_translation_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Generate Translation"
                            android:layout_marginTop="16dp"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:background="@drawable/rounded_button_primary"
                            android:fontFamily="@font/tiktok_sans" />
                    </LinearLayout>

                    <!-- Translation content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/translation_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Translation"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#E0E0E0"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:id="@+id/translation_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Your translated content will appear here."
                            android:textSize="14sp"
                            android:textColor="#ABABAB"
                            android:fontFamily="@font/dm_sans" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Comment content -->
                <LinearLayout
                    android:id="@+id/contentViewComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="gone">

                    <!-- Comment options -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customize Comment"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#BD79FF"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comment Tone"
                            android:textColor="#ABABAB"
                            android:textSize="14sp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/tiktok_sans" />

                        <Spinner
                            android:id="@+id/tone_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/dropdown_background_dark"
                            android:spinnerMode="dropdown" />

                        <!-- Personalization fields - shown when "Personalize" is selected -->
                        <LinearLayout
                            android:id="@+id/personalization_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tone"
                                android:textColor="#ABABAB"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/tiktok_sans" />

                            <EditText
                                android:id="@+id/personalization_tone_field"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:background="@drawable/dropdown_background_dark"
                                android:padding="12dp"
                                android:textColor="#ABABAB"
                                android:textColorHint="#666666"
                                android:hint="e.g., Professional, Casual, Supportive"
                                android:fontFamily="@font/dm_sans"
                                android:textSize="14sp"
                                android:inputType="textCapWords"
                                android:layout_marginBottom="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Additional Details"
                                android:textColor="#ABABAB"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"
                                android:fontFamily="@font/tiktok_sans" />

                            <EditText
                                android:id="@+id/personalization_details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dropdown_background_dark"
                                android:padding="12dp"
                                android:textColor="#ABABAB"
                                android:textColorHint="#666666"
                                android:hint="Example: Focus on technical aspects and strategic value"
                                android:fontFamily="@font/dm_sans"
                                android:textSize="14sp"
                                android:minLines="3"
                                android:maxLines="5"
                                android:gravity="top|start"
                                android:inputType="textCapSentences|textMultiLine" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/generate_comment_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Generate Comment"
                            android:layout_marginTop="16dp"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:textSize="15sp"
                            android:background="@drawable/rounded_button_primary"
                            android:fontFamily="@font/tiktok_sans" />
                    </LinearLayout>

                    <!-- Comment content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/content_block_background"
                        android:padding="20dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/comment_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comment"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#BD79FF"
                            android:fontFamily="@font/tiktok_sans" />

                        <TextView
                            android:id="@+id/comment_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Your generated comment will appear here."
                            android:textSize="14sp"
                            android:textColor="#ABABAB"
                            android:fontFamily="@font/dm_sans" />

                        <Button
                            android:id="@+id/copy_comment_button"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginTop="12dp"
                            android:text="Copy Comment"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:textSize="12sp"
                            android:paddingHorizontal="16dp"
                            android:background="@drawable/rounded_button_primary"
                            android:fontFamily="@font/tiktok_sans"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>