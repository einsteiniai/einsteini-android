<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting when the OS's Dark Mode setting is off -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Show a splash screen on the activity, this is only visible in the app's launcher screen. -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <!-- Theme applied to the Android Window as soon as the process has started, this is the theme for the Flutter UI. -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Einsteini custom theme for overlay UI -->
    <style name="EinsteiniOverlayTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:colorBackgroundFloating">@color/colorSurface</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">#CCFFFFFF</item>
        <item name="android:colorControlHighlight">@color/colorBorder</item>
        
        <!-- Material component style customization -->
        <item name="chipStyle">@style/Widget.MaterialComponents.Chip.Choice</item>
        <item name="chipGroupStyle">@style/Widget.MaterialComponents.ChipGroup</item>
        <item name="buttonStyle">@style/EinsteiniOverlayButton</item>
        <item name="spinnerStyle">@style/EinsteiniOverlaySpinner</item>
    </style>
    
    <!-- Custom text styles for overlay content -->
    <style name="EinsteiniOverlayTitle">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BD79FF</item>
    </style>
    
    <style name="EinsteiniOverlayTabText">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="EinsteiniOverlayBodyText">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Button style with modern look -->
    <style name="EinsteiniOverlayButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:backgroundTint">#BD79FF</item>
        <item name="rippleColor">#B053F6</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- Spinner style with modern look -->
    <style name="EinsteiniOverlaySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">#1E293B</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <!-- Card style for content sections -->
    <style name="EinsteiniOverlayCard">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">#1A2235</item>
        <item name="rippleColor">#3DBDFFFF</item>
    </style>
</resources>
